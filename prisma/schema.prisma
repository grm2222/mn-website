// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("editor") // "admin" or "editor"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  pages     Page[]
  posts     Post[]
}

model Page {
  id        String   @id @default(cuid())
  path      String   @unique // "/", "/about", "/contact"
  title     String
  puckData  String   // JSON string of Puck configuration
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("pages")
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   // Rich text HTML content
  excerpt   String?  // Optional short description
  thumbnail String?  // Featured image URL
  category  String   @default("global") // "global", "mongolia", "vietnam", "china"
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations  
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  @@map("posts")
}

model Media {
  id        String   @id @default(cuid())
  filename  String
  path      String
  mimetype  String
  size      Int
  createdAt DateTime @default(now())
  
  @@map("media")
}